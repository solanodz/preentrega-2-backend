<h1>Products</h1>

<table id="main" role="grid">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Code</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Category</th>
    <th>Thumbnail</th>
    <th>Status</th>
    <th>Action</th> <!-- New column for the "Agregar al carrito" button -->
  </tr>
  {{#each payload}}
    <tr>
      <td><a href="./description.handlebars">{{this.title}}</a></td>
      <td>{{this.description}}</td>
      <td>{{this.code}}</td>
      <td>$ {{this.price}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.category}}</td>
      <td>{{this.thumbnail}}</td>
      <td>{{this.status}}</td>
      <td><button onclick="addToCart('{{this.title}}', {{this.price}})">Agregar al carrito</button></td>
    </tr>
  {{/each}}
</table>

